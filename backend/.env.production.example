# ===================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===================================
# Copy this to .env for production deployment

# Server
NODE_ENV=production
PORT=3000

# Frontend URL (Cloudflare Pages)
FRONTEND_URL=https://verdrehtewelt.pages.dev

# MongoDB Atlas (Production Database)
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/verdrehte-welt?retryWrites=true&w=majority

# PayPal LIVE Credentials
PAYPAL_CLIENT_ID=your-live-client-id
PAYPAL_CLIENT_SECRET=your-live-secret
PAYPAL_MODE=live
PAYPAL_WEBHOOK_ID=your-webhook-id

# JWT Secret (CHANGE THIS!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=365d

# Email Service (Resend)
MAIL_API_KEY=re_your_resend_api_key
MAIL_FROM=noreply@verdrehtewelt.de

# Cloudinary (QR Code Storage - Optional)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Admin Password
ADMIN_PASSWORD=verdrehtewelt2025

# Platform Fee (5%)
PLATFORM_FEE_PERCENTAGE=5
